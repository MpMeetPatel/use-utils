{
    "compilerOptions": {
        "target": "es5",
        "module": "CommonJS",
        "moduleResolution": "node",
        "jsx": "react",
        "declaration": true,
        "pretty": true,
        "sourceMap": false,
        "strict": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noImplicitAny": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitThis": false,
        "lib": ["dom", "dom.iterable", "esnext"],
        "importHelpers": true,
        "rootDir": "src",
        "outDir": "build"
    },
    "exclude": ["node_modules", "build"]
}
